# Environment Configuration
# Copy this file to .env and update with your actual values

# OpenAI API Configuration
# Put your real key in .env (never commit secrets)
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL=gpt-4o-mini

# Local demo mode (no OpenAI calls). Set to true for offline demos.
DEMO_MODE=true

# Google Sheets Configuration (Optional)
GOOGLE_CREDENTIALS_PATH=credentials.json
GOOGLE_SHEET_NAME=Course Registrations
GOOGLE_SHEETS_ENABLED=false

# Server Configuration
HOST=0.0.0.0
PORT=8000
RELOAD=true
DEBUG=false

# Course Information
COURSE_NAME=AI & Machine Learning Bootcamp
COURSE_DURATION=12 weeks
COURSE_PRICE=$999
INSTRUCTOR_NAME=Tech Expert
